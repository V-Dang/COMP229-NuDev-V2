<%- include ('../partials/header.ejs') %>

<%- include ('../partials/main_nav.ejs') %>
  


<!-- Main Content -->
<main class="container">
    <!--add boostrap table code-->
  
    <div class="row">
      <div class="col-md-offset-3 col-md-8">
        <h1><%=title %></h1>
        
        <br />

        <table class="table table-bordered table-striped table-hover" id="ordertable">
          <!--HEader row-->
          <tr>
            <% if(typeof displayName == 'string' && displayName) { %>
            <th class="text-center col-2">Survey Title</th>
            <th class="text-center col-2">Subject</th>
            <% } else { %>
              <th class="text-center col-2">Survey Title <button onclick="tableSort()"><i class="fas fa-angle-up"></i></button></th>
              <th class="text-center col-2">Subject</th>
              <% } %>  
          </tr>
  
          <!--Repetable Templet row-->
          <% for (let count=0; count<SurveyList.length; count++){%>
            <tr>
              <% if(typeof displayName == 'string' && displayName) { %>
              <td class="text-centre "><%=SurveyList[count].survey_name %></td>
              <td class="text-centre "><%=SurveyList[count].survey_subject %></td>
              <!-- <td class="text-centre "><%=SurveyList[count].survey_date %></td> -->
              <td class="text-center col-1">
                <a href="/survey/take/<%= SurveyList[count]._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-pencil-alt"></i> Take</a>
            </td>
            <td class="text-center col-1">
              <a href="/survey/edit/<%= SurveyList[count]._id %>" class="btn btn-primary btn-sm">
              <i class="fas fa-pencil-alt"></i> Edit</a>
          </td>
            <td class="text-center col-1">
                <a href="/survey/delete/<%= SurveyList[count]._id %>" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt"></i> Delete</a>
            </td>
            <% } else { %>
              <td class="text-centre "><%=SurveyList[count].survey_name %></td>
              <td class="text-centre "><%=SurveyList[count].survey_subject %></td>
              <!-- <td class="text-centre "><%=SurveyList[count].survey_date %></td> -->
              <td class="text-center col-1">
                <a href="/survey/take/<%= SurveyList[count]._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-pencil-alt"></i> Take</a>
            </td>
            <td class="text-center col-1">
              <a href="/survey/edit/<%= SurveyList[count]._id %>" class="btn btn-primary btn-sm">
              <i class="fas fa-pencil-alt"></i> Edit</a>
          </td>
            <td class="text-center col-1">
                <a href="/survey/delete/<%= SurveyList[count]._id %>" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt"></i> Delete</a>
              <% } %>  
            </tr>
          <%}%>
        </table>
      </div>
    </div>
  </main>
  
  
  
<%- include ('../partials/bottom_nav.ejs') %>  


<%- include ('../partials/header.ejs') %> <%- include ('../partials/main_nav.ejs') %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Survey Name</label>
          <input
            type="text"
            class="form-control"
            id="survey_name"
            placeholder="Enter the Survey Name:"
            name="survey_name"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Survey Subject</label>
          <input
            type="text"
            class="form-control"
            id="survey_subject"
            placeholder="Enter the Subject:"
            name="survey_subject"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Survey question 1</label>
          <input
            type="text"
            class="form-control"
            id="q1"
            placeholder="Enter a Question:"
            name="q1"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Survey question 2</label>
          <input
            type="text"
            class="form-control"
            id="q2"
            placeholder="Enter a Question:"
            name="q2"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Survey question 3</label>
          <input
            type="text"
            class="form-control"
            id="q3"
            placeholder="Enter a Question:"
            name="q3"
            required
          />
        </div>


        <button class="btn btn-primary" type="submit">
          <i class="fas fa-check-square-o"></i>Submit
        </button>

        <a href="/survey" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ('../partials/bottom_nav.ejs') %> <%- include ('../partials/footer.ejs') %>